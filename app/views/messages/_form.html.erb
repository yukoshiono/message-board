<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class ="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <label class="col-sm-2 cotrol-label" style="text-align:right" >名前：</label>
    <div class="col-sm-10">
    <%= f.text_field :name %>
    </div>
  </div>
  <br /> 
  <div class="row">
    <label class="col-sm-2 cotrol-label" style="text-align:right">内容：</label>
    <div class="col-sm-10"><%= f.text_area :body, class:"form-control" %></div>
  </div>
  <br /> 
  <div class="row">
    <div class="col-sm-offset-2 col-sm-10">    
    <%= f.submit 'メッセージ投稿', class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>