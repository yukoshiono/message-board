<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧  
  </div>    
  
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br/>
    <% end %>
  </div>
</div>
<form class="form-horizontal">
<div class="form-group">
  <%= form_for(Message.new) do |f| %>
    <div class="row">
      <label class="col-sm-2 cotrol-label" style="text-align:right" >名前：</label>
        <div class="col-sm-10">
        <%= f.text_field :name %>
      </div>
    </div>
    <br /> 
    <div class="row">
        <label class="col-sm-2 cotrol-label" style="text-align:right">内容：</label>
        <div class="col-sm-10"><%= f.text_area :body %></div>
    </div>
    <div class="row">
      <div class="col-sm-offset-2 col-sm-10">    
      <%= f.submit 'メッセージ投稿', class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
</form>